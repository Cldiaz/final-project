<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<!-- Render the Registration form  -->
        <main class="main">
            
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <!--<img src="../Assets/logo1.png" alt="Manage Support Logo" width="200px"/>-->
                        <h2 class="text-center">Registration</h2><br/>
                        <p class="red-required">Every field is required *</p>
                        <form method="post">
                            <div class="input-group">
                                <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-envelope-o"></i></span>
                                <input name="email" type="email" class="form-control" required autofocus placeholder="Email" />
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon" id="sizing-addon2"><i class="fa fa-user"></i></span>
                                <input name="username" type="text" class="form-control" required placeholder="Username"/>
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-key"></i></span>
                                <input name="password" type="password" class="form-control" required placeholder="Password"/>
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-hashtag"></i></span>
                                <input name="displayName" type="text" class="form-control" required placeholder="Display Name"/>
                            </div>
                            <div class="form-group text-center">
                                <label class="userTypeLabel" for="type">User Type: </label>
                                <input type="radio" name="type" value="Customer" checked> Customer
                                <input type="radio" name="type" value="Admin"> Admin
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-submit">Register</button>
                                <a href="/">
                                    <button type="button" class="btn btn-cancel">Cancel</button>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
